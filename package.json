{
  "name": "mud",
  "version": "1.0.0",
  "description": "A modern MUD (Multi-User Dungeon) game server",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite-node src/index.ts",
    "build": "tsdown src/index.ts --outDir dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "keywords": ["mud", "game", "server", "typescript"],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.10.4",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "lint-staged": "^15.4.0",
    "simple-git-hooks": "^2.11.1",
    "tsdown": "^0.2.17",
    "typescript": "^5.7.2",
    "vite": "^6.0.7",
    "vite-node": "^2.1.8",
    "vitest": "^2.1.8"
  },
  "dependencies": {},
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": ["biome check --write --no-errors-on-unmatched"]
  }
}
