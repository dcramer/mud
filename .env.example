# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_D1_TOKEN=your-d1-token

# D1 Database IDs (get these from wrangler d1 create commands)
CLOUDFLARE_AUTH_DB_ID=your-auth-database-id
CLOUDFLARE_GAME_DB_ID=your-game-database-id
CLOUDFLARE_SOCIAL_DB_ID=your-social-database-id
CLOUDFLARE_ANALYTICS_DB_ID=your-analytics-database-id

# KV Namespace IDs (get these from Cloudflare dashboard)
CLOUDFLARE_PLAYER_CACHE_ID=your-player-cache-id
CLOUDFLARE_ROOM_CACHE_ID=your-room-cache-id
CLOUDFLARE_SESSION_CACHE_ID=your-session-cache-id

# Development
NODE_ENV=development
LOG_LEVEL=debug